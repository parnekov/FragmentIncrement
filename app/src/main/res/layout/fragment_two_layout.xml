<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_get_notification"
        android:layout_width="@dimen/layout_width_tv"
        android:layout_height="@dimen/layout_height_tv"
        android:layout_gravity="center"
        android:layout_marginTop="140dp"
        android:background="@drawable/shape_for_text"
        android:gravity="center"
        android:elevation="5dp"
        android:text="@string/create_new_notification"/>

    <RelativeLayout
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_subtract"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:background="@drawable/shape_for_buttons"
            android:text="@string/minus"/>

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:textSize="@dimen/textNumberSize"/>

        <Button
            android:id="@+id/button_add"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="40dp"
            android:background="@drawable/shape_for_buttons"
            android:text="@string/plus"/>
    </RelativeLayout>

</LinearLayout>